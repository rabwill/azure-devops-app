{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.1",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension.azdevops",
    "developer": {
        "name": "Rabia Williams",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/termofuse",
        "termsOfUseUrl": "https://www.example.com/privacy"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "AzDevOps Helper",
        "full": "AzDevOps Helper"
    },
    "description": {
        "short": "Create, search, view and edit tasks",
        "full": "Use AzDevOps Helper to search, edit, summarise your tasks"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
          "botId": "${{BOT_ID}}",
          "scopes": [ "personal", "team", "groupchat" ],
          "isNotificationOnly": false,
          "supportsFiles": false
          
        }
      ],
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "messageHandlers": [
                {
                  "type": "link",
                  "value": {
                    "domains": [
                      "*.dev.azure.com",
                      "*.rabdevOps.com",
                      "*.botframework.com"
                    ]
                  }
                }
              ],              
            "commands": [
                {
                    "id": "searchQuery",
                    "context": [
                        "compose",
                        "commandBox"
                    ],
                    "description": "Find through AzDevOps Helper plugin tasks that match your search criteria",
                    "title": "Search",
                    "type": "query",
                    "parameters": [
                        {
                            "name": "title",
                            "title": "Task title",
                            "description": "Send task title as keyword",
                            "inputType": "text"
                        },
                        {
                            "name": "projectName",
                            "title": "Project name",
                            "description": "Send project name to which tasks belong to as keyword",
                            "inputType": "text"
                        },
                        {
                            "name": "state",
                            "title": "State of the project",
                            "description": "Send state or status of the task as keyword. Acceptable values are To Do, Doing, Done",
                            "inputType": "text"
                        }
                    ]
                },
                {
                    "id": "createWorkItem",
                    "context": [
                        "compose",
                        "message",
                        "commandBox"
                    ],
                    "description": "Create new task",
                    "title": "Create new task",
                    "type": "action",
                    "fetchTask": true
                }
            ]
        }
    ],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}