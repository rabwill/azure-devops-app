{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.microsoft.teams.extension.azdevops",
    "developer": {
        "name": "Microsoft 365 Dev Advocacy",
        "websiteUrl": "https://www.example.com",
        "privacyUrl": "https://www.example.com/termofuse",
        "termsOfUseUrl": "https://www.example.com/privacy"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Devopsify",
        "full": "Devopsify app"
    },
    "description": {
        "short": "Find and manage Azure DevOps work items using Teams AI library",
        "full": "Manage and find Azure DevOps work items using Teams AI library"
    },
    "accentColor": "#FFFFFF",
    "bots": [
        {
          "botId": "${{BOT_ID}}",
          "scopes": [ "personal", "team", "groupchat" ],
          "isNotificationOnly": false,
          "supportsFiles": false
          
        }
      ],
    "composeExtensions": [
        {
            "botId": "${{BOT_ID}}",
            "messageHandlers": [
                {
                  "type": "link",
                  "value": {
                    "domains": [
                      "*.dev.azure.com",
                      "*.botframework.com"
                    ]
                  }
                }
              ],              
            "commands": [
                {
                    "id": "searchQuery",
                    "context": [
                        "compose",
                        "commandBox"
                    ],
                    "description": "Search work items in Azure DevOps",
                    "title": "Search",
                    "type": "query",
                    "parameters": [
                        {
                            "name": "searchQuery",
                            "title": "Search Query",
                            "description": "Search work items in Azure DevOps",
                            "inputType": "text"
                        }
                    ]
                },
                {
                    "id": "createWorkItem",
                    "context": [
                        "compose",
                        "message",
                        "commandBox"
                    ],
                    "description": "Create work item in Azure DevOps",
                    "title": "Create work item in Azure DevOps",
                    "type": "action",
                    "fetchTask": true
                }
            ]
        }
    ],
    "configurableTabs": [],
    "staticTabs": [],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": []
}